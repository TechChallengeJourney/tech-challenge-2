{
  "name": "tech-challenge-2",
  "private": true,  "scripts": {
    "build": "turbo run build",
    "dev": "turbo dev --filter=bytebank-shell --filter=mfe-investments",
    "dev:all": "turbo dev --concurrency=12",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "ssr:build": "cd apps/bytebank-shell && yarn build:ssr",
    "ssr:start": "cd apps/bytebank-shell && yarn start:ssr",
    "ssg:build": "cd apps/bytebank-shell && yarn build:ssg"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
